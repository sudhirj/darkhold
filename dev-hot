#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$ROOT_DIR"

if ! command -v air >/dev/null 2>&1; then
  echo "air is not installed. Install it with: go install github.com/air-verse/air@latest"
  exit 1
fi

echo "Starting Darkhold in embedded rebuild mode on http://127.0.0.1:3275"
echo "Note: this mode rebuilds and restarts on changes."

air -c .air.toml "$@"
